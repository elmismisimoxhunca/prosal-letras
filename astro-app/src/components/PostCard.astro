---
interface Props {
  post: {
    slug: string;
    title: string;
    excerpt: string;
    feature_image: string;
    published_at: string;
    authors: Array<{ name: string }>;
    tags: Array<{ name: string; slug: string }>;
  };
}

const { post } = Astro.props;
---

<article class="post-card">
  {post.feature_image && (
    <div class="image-wrapper">
      <img src={post.feature_image} alt={post.title} />
    </div>
  )}
  <div class="content">
    {post.tags && post.tags.length > 0 && (
      <div class="tags">
        {post.tags.slice(0, 2).map((tag) => (
          <a href={`/categories/${tag.slug}`} class="tag">
            {tag.name}
          </a>
        ))}
      </div>
    )}
    <h3>
      <a href={`/blog/${post.slug}`}>{post.title}</a>
    </h3>
    <p class="excerpt">{post.excerpt}</p>
    <div class="meta">
      <time datetime={post.published_at}>
        {new Date(post.published_at).toLocaleDateString('es-CL', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })}
      </time>
      {post.authors && post.authors.length > 0 && (
        <span class="author">por {post.authors[0].name}</span>
      )}
    </div>
  </div>
</article>

<style>
  .post-card {
    background: #fff;
    overflow: hidden;
    border: 1px solid #e5e5e5;
    transition: transform 0.3s, box-shadow 0.3s;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  }

  .image-wrapper {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background: #f0f0f0;
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s;
  }

  .post-card:hover .image-wrapper img {
    transform: scale(1.05);
  }

  .content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .content h3 {
    margin: 0 0 0.75rem 0;
    font-size: 1.2rem;
    line-height: 1.4;
  }

  .content h3 a {
    color: #1a1a1a;
    text-decoration: none;
    transition: opacity 0.3s;
  }

  .content h3 a:hover {
    opacity: 0.7;
  }

  .excerpt {
    color: #666;
    font-size: 0.9rem;
    margin: 0 0 1rem 0;
    flex: 1;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .meta {
    display: flex;
    gap: 0.75rem;
    font-size: 0.8rem;
    color: #999;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-bottom: 0.75rem;
  }

  .tag {
    display: inline-block;
    padding: 0.25rem 0.7rem;
    background: #1a1a1a;
    color: #fff;
    text-decoration: none;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: background 0.3s;
  }

  .tag:hover {
    background: #333;
    opacity: 1;
  }
</style>
